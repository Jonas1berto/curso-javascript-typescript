<%- include('includes/head') %> <%- include('includes/nav') %>
<div class="container">
  <div class="col-lg-2"></div>

  <div class="col-lg-8 my-3">
    <h1 class="text-center">Contato</h1>
    <p class="text-center lead">Crie seu contato</p>

    <%- include('includes/messages') %>

    <% if(contato._id) { %>
    <form action="/contato/edit/<%= contato._id %>" method="post" class="contato">
      <% } else { %>
        <form action="/contato/register" method="post" class="contato" >
    <% } %>
      <input type="hidden" name="_csrf" value=<%= csrfToken %>>
      <div class="form-group">
        <label>Nome</label>
        <input
        type="text"
        class="form-control nome"
        name="nome"
        placeholder="Digite seu nome"
        value="<%= contato.nome %>"
        />
      </div>
      <div class="form-group">
        <label>Sobrenome</label>
        <input
        type="text"
        class="form-control sobrenome"
        name="sobrenome"
        placeholder="Digite seu sobrenome"
        value="<%= contato.sobrenome %>"
        />
      </div>
      <div class="form-group">
        <label>E-mail</label>
        <input
        type="email"
        class="form-control email"
        name="email"
        placeholder="Digite seu e-mail"
        value= "<%= contato.email %>"
        />
      </div>
      <div class="form-group">
        <label>Telefone</label>
        <input
        type="tel"
        class="form-control telefone"
        name="telefone"
        placeholder="Digite seu telefone"
        value= "<%= contato.telefone %>"
        />
      </div>
      <button type="submit" class="btn btn-primary">Salvar contato</button>
    </form>

    <div class="col-lg-2"></div>
  </div>
  <%- include('includes/footer') %>
</div>
