<%- include('includes/head') %> <%- include('includes/nav') %>
<div class="container">
  <div class="col-lg-2"></div>

  <div class="col-lg-8 my-3">
    <h1 class="text-center">Login</h1>
    <p class="text-center lead">Crie seu usuário, ou faça o login</p>
    <%- include('includes/messages') %>

    <div class="row text-center">
      <div class="col-lg my-5">
        <h4>Faça seu cadastro</h4>
        <p>Se vc ainda não tem uma conta, crie ela abaixo:</p>

        <form class="form-cadastro" action="/login/register" method="post">
          <input type="hidden" name="_csrf" value=<%= csrfToken %>>
          <div class="form-group">
            <label>Seu e-mail</label>
            <input
              type="email"
              class="form-control"
              name="email"
              placeholder="Digite seu e-mail"
            />
          </div>
          <div class="form-group">
            <label>Sua senha</label>
            <input
              type="password"
              class="form-control"
              name="password"
              placeholder="Digite sua senha"
            />
          </div>
          <button type="submit" class="btn btn-primary">Registre</button>
        </form>
      </div>

      <div class="col-lg my-5">
        <h4>Faça seu login</h4>
        <p>Se vc tiver uma conta, faça o login abaixo:</p>
        
        <form class="form-login" action="/login/login" method="post">
          <input type="hidden" name="_csrf" value=<%= csrfToken %>>
          <div class="form-group">
            <label>Seu e-mail</label>
            <input
              type="email"
              class="form-control"
              name="email"
              placeholder="Digite seu e-mail"
            />
          </div>
          <div class="form-group">
            <label>Sua senha</label>
            <input
              type="password"
              class="form-control"
              name="password"
              placeholder="Digite sua senha"
            />
          </div>
          <button type="submit" class="btn btn-dark">Entrar</button>
        </form>
      </div>
    </div>
  </div>
  <div class="col-lg-2"></div>
</div>
<%- include('includes/footer') %>
